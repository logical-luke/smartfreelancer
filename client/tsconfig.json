{
  "compilerOptions": {
    "noEmit": true,

    "target": "esnext",
    "module": "esnext",

    "noImplicitThis": true,
    "strict": true,

    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    "jsx": "preserve",
    "jsxImportSource": "vue",

    "skipLibCheck": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "useDefineForClassFields": true,

    "verbatimModuleSyntax": true,

    "baseUrl": ".",

    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
